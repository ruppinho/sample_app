<% provide(:title, 'All users') %>
<h1>All users</h1>
<div class="row">
  <div class="span12 offset0">
    <%= will_paginate %>
    <% @users.each do |user| %>
        <div class="media">
          <a class="pull-left" href="<%= user_path(user) %>">
            <%= gravatar_for user, size: 48, class: 'img-circle media-object' %>
          </a>

          <div class="media-body">
            <h4 class="media-heading"><%= user.name %></h4>
            <%= user.email %>
          </div>
        </div>
    <% end %>
    <%= will_paginate %>
  </div>
</div>